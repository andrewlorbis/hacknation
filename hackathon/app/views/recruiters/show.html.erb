<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-xs-12 col-md-12">
    <div class="row">
      <div class="col-sm-2">
        <%= image_tag("empty-profile.png", size:"150x150", alt: "Edit Entry", class: "img-responsive")%>
      </div>
      <div class="col-sm-10">
        <h3>
          <strong><%= @recruiter.name %></strong>
        </h3>
        <h6>Recruitment Specialist</h6>
        <br><br>
        <h4>
          Success Rate: <%= @recruiter.rate.floor %>
        </h4>
      </div>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-xs-12">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Referred applicants</h3>
      </div>
      <div class="box-body table-responsive">
        <div class="row">
          <div class="col-md-12">
            <table class="table table-bordered table-hover" id="appTable">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Position Applied</th>
                  <th>Age</th>
                  <th>Location</th>
                  <th>Gpa</th>
                  <th>Exp</th>
                  <th>Status</th>
                  <th style="width:5%;">Show</th>
                  <th style="width:4%;">Edit</th>
                  <th style="width:5%;">Destroy</th>
                </tr>
              </thead>

              <tbody>
                <% @applicants.each do |applicant| %>
                  <tr>
                    <td><%= applicant.name %></td>
                    <td><%= applicant.position.name %></td>
                    <td><%= applicant.age %></td>
                    <td><%= applicant.location %></td>
                    <td><%= applicant.gpa %></td>
                    <td><%= applicant.exp %></td>
                    <td><%= applicant.statuses.name %></td>
                    <td><center><%= link_to applicant do %><span class="fa fa-eye fa-1x"></span><% end %></center></td>
                    <td><center><%= link_to edit_applicant_path(applicant) do %><span class="fa fa-edit fa-1x"></span><% end %></center></td>
                    <td><center><%= link_to applicant, method: :delete, data: { confirm: 'Are you sure to remove this applicant?' }  do %><span class="fa fa-trash fa-1x"></span><% end %></center></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
</div>
  <h4><center>
    <!-- <%= link_to 'Edit', edit_recruiter_path(@recruiter) %> |
    <%= link_to 'Back', recruiters_path %> -->
    </center></h4>

  </div>
  </div>
